{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "module": "ESNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "nodenext",
    "removeComments": true,
    "strict": true,
    "declarationDir": "./dist/"
  },
  "exclude": ["./dist/"]
}
