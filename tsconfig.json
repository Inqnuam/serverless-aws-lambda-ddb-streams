{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Bundler",
    "removeComments": true,
    "strict": true,
    "declarationDir": "./dist/",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "exclude": ["./dist/"]
}
